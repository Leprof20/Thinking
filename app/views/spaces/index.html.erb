<%# <div class="container mt-4 mx-auto"> %>
  <div class="main-container">
    <div>

      <%= form_tag spaces_path, method: :get, class: "form-inline m-3 justify-content-center" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control w-75 rounded",
          placeholder: "Find a space"
        %>
        <%# <%= submit_tag "Search", class: "btn btn-primary" %>
        <%= button_tag(type: "submit", class: "btn btn-primary") do %>
          <i class="fas fa-search"></i>
        <% end %>

      <% end %>
      <% if @spaces.empty? %>
        <p class="no-cards text-danger">Sorry, your search found no Spaces. Please try another search.</p>
        <div style="width:100%;height:0;padding-bottom:56%;position:relative;"><iframe src="https://giphy.com/embed/xTiTnwLNe6sSsySBNu" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div><p><a href="https://giphy.com/gifs/nowthisnews-news-obama-nowthis-xTiTnwLNe6sSsySBNu">via GIPHY</a></p>
      <% else %>
        <div class="cards px-3">
          <% @spaces.each do |space| %>
            <%# card component %>
            <div class="card mb-3 shadow-sm">
              <% if space.photos.empty? %>
                <img src="https://images.unsplash.com/photo-1505409859467-3a796fd5798e?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80" class="card-img-top" alt="...">
              <% else %>
                <%= cl_image_tag space.photos[0].key, crop: :fill %>
              <% end %>
              <div class="card-body d-flex flex-column justify-content-between">
                <div class>
                  <small><%= space.space %></small>
                  <%= link_to space_path(space) do %>
                    <h5 class="card-title">
                      <%= space.title %>
                    </h5>
                  <% end %>
                  <small><%= space.address %></small>
                </div>

                <ul class="d-flex justify-content-between p-0 m-0 mt-4">
                  <li class="list-unstyled">
                    <i class="fas fa-user-friends"></i>
                    <%= space.capacity %>
                    <% if space.wifi %>
                      <i class="fas fa-wifi"></i>
                    <% end %>
                  </li>
                  <li class="list-unstyled">
                    <h5>
                      AED
                      <%= space.price.to_i %>
                      per day
                    </h5>
                  </li>
                </ul>
              </div>
            </div>
            <%# end card component %>
          <% end %>
      </div>
    <% end %>
    </div>
      <% unless @spaces.empty? %>
        <div id="map"
          style="width: 40vw; height: 100vh; position: sticky; top: 0;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" class="map-index">
        </div>
        <% end %>
  </div>
<%# </div> %>
