<div class="space-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @space.photos[0].key, height: 300, crop: :fill %>')">
  <div class="container">
    <h1><%= @space.title.capitalize %></h1>
    <button type="button" class="btn btn-light text-secondary" data-toggle="modal" data-target="#exampleModal">
      Photos
    </button>
  </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content bg-transparent">

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= cl_image_tag @space.photos[0].key, crop: :fill, class: "d-block w-100" %>
            </div>
            <div class="carousel-item">
              <%= cl_image_tag @space.photos[1].key, crop: :fill, class: "d-block w-100" %>
            </div>
            <div class="carousel-item">
              <%= cl_image_tag @space.photos[2].key, crop: :fill, class: "d-block w-100" %>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

    </div>
  </div>
</div>


<div class="container my-5">

  <div class="row my-3 align-items-center">
    <div class="col-sm-12 col-md-8">
      <h3 class="m-0"><%= @space.title.capitalize %></h3>
      <p><%= @space.address %></p>
      <p class="m-0"><%= @space.description %></p>
      <ul class="d-flex justify-content-between p-0 m-0 mt-4">
        <li class="list-unstyled">
          <i class="fas fa-user-friends"></i>
          <%= @space.capacity %>
          <% if @space.wifi %>
            <i class="fas fa-wifi"></i>
          <% end %>
        </li>
        <li class="list-unstyled">
          <h5>
            AED
            <%= @space.price.to_i %>
            per day
          </h5>
        </li>
      </ul>
    </div>
    <div class="col-sm-12 col-md-4">
      <div class="p-4 bg-white shadow-sm">
        <h4>Book this space</h4>
        <%= render 'bookings/form' %>
      </div>
    </div>
  </div>

  <div class="row my-3 align-items-center">
    <div class="col-sm-12 col-md-8 mb-3">
      <div id="map"
      style="width: 100%; height: 300px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
    <div class="col-sm-12 col-md-4">

        <% unless @allow_review %>
          <div class="p-4 bg-white shadow-sm">
            <h4>Leave a review</h4>
            <%= render 'reviews/form' %>
          </div>
        <% end %>
    </div>
  </div>

  <div class="row my-3 align-items-center">
    <div class="col-sm-12 col-md-8">
      <h3 class="m-0">Reviews</h3>

      <ul class="list-group mt-2" data-aos="fade-up" data-aos-duration="1000" data-aos-easing="ease-in-out">
        <% @space.reviews.each do |review| %>
          <li class="list-group-item bg-transparent border-top-0 border-left-0 border-right-0">
            <div>
              <% review.rating.times do %>
                <i class="fas fa-star text-warning"></i>
              <% end %>
              <small class="text-muted"><em>- <%= time_ago_in_words(review.created_at) %></em></small>
            </div>
            <div>
              <%= review.comment %>
            </div>
          </li>
        <% end %>
      </ul>

    </div>
  </div>

  <% if policy(@space).edit? %>
    <%= link_to edit_space_path(@space) do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
  <% end %>

  <% if policy(@space).destroy? %>
    <%= link_to space_path(@space), method: :delete, data: { confirm: "Are you sure ?" } do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  <% end %>

</div>
