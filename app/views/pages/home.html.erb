<div class="home-banner">
  <h1>About a Space</h1>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= "Latest Spaces" %>
      <p>
        <span id="banner-typed-text">What Space?</span>
      </p>
    </div>
  </div>
</div>

<div class="container mt-4 mx-auto">
  <div class="main-container">
    <div class="cards mr-4">
      <% @spaces.each do |space| %>
      <%# card component %>
        <div class="card mb-3 shadow-sm" style="width: 16rem;">
          <%= cl_image_tag space.photos[0].key, crop: :fill %>
          <div class="card-body d-flex flex-column justify-content-between">
            <div class>
              <small><%= space.space %></small>
              <%= link_to space_path(space) do %>
                <h5 class="card-title">
                  <%= space.title %>
                </h5>
              <% end %>
              <small><%= space.address %></small>
            </div>

            <ul class="d-flex justify-content-between p-0 m-0 mt-4">
              <li class="list-unstyled">
                <i class="fas fa-user-friends"></i>
                <%= space.capacity %>
                  <i class="fas fa-wifi"></i>
              </li>
              <li class="list-unstyled">
                <h5>
                  AED
                  <%= space.price.to_i %>
                </h5>
              </li>
            </ul>
          </div>
          <%# end card component %>
        </div>
      <% end %>
    </div>
  </div>
</div>
